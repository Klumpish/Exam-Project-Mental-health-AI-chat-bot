#App name
spring.application.name=backend
#Server port (backend runs on port 8080)
server.port=8080
#----Database config----#
#Database config (postgresSQL)
#Replace these with your own local credentials
#
spring.datasource.url=jdbc:postgresql://localhost:5432/mental_health_db
spring.datasource.username=your_db_username
spring.datasource.password=your_db_password
spring.datasource.driver-class-name=org.postgresql.Driver
#
# JPA/Hibernate configuration
# This creates/updates database tables automatically
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true
#
# OpenAI API Configuration
# TODO: API keys, never commit to git
# Use environment variables in production
openai.api.key=${OPENAI_API_KEY:your-api-key-here}
#
# Logging configuration
logging.level.com.chatbot=DEBUG
logging.level.org.springframework.web=INFO
logging.level.org.hibernate=INFO
# Security configuration #TODO (we'll add this later)
# jwt.secret=your-secret-key-here
# jwt.expiration=86400000
#
#
# CORS configuration (allow frontend to connect)
# #TODO: In production, replace * with actual frontend URL
spring.web.cors.allowed-origins=http://localhost:3000
spring.web.cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
spring.web.cors.allowed-headers=*
spring.web.cors.allow-credentials=true
#
#
# File upload limits
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB